program dummy_case; // 用goto语句实现的case
var
	value : integer;
begin
	write("please enter your value: ");
	read("%d", value);
	if value > 0 then goto 0;
	if value = 0 then goto 1;
	if value < 0 then goto 2;

0:	writeln("%d > 0", value); goto 3;
1:	writeln("%d = 0", value); goto 3;
2:	writeln("%d < 0", value); goto 3;
3:
	writeln("end dummy_case");


end
.