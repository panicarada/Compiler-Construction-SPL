program Fibo;

type
	Info = record
				n_steps : integer;
				fibo_n  : integer;
			end;
var
	n : integer;
	info : Info;
function fibo(
	n : integer;
var
	info    : Info
) : integer;
begin
	info.n_steps := info.n_steps + 1;
	if n <= 1 then begin
		fibo := n;
		info.fibo_n := fibo;
	end
	else begin
		fibo := fibo(n-1, info) + fibo(n-2, info);
		info.fibo_n := fibo;
	end;
end
;

begin
	info.n_steps := 0;
	read("Please enter your n: ", n);
	writeln("fibo(", n, ") = ", fibo(n, info));
	writeln("using ", info.n_steps, " steps");
end
.
