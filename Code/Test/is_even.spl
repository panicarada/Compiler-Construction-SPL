program is_even;	// 判断是否为偶数
const
	zero = 0;
type
	int = integer;
	bool = boolean;
	Student = record 
				is_male : bool;
				age 	: integer;
				name    : string;
			  end;
var	
	stu : Student;

function is_even(
	num : int
) : bool;
begin
	case num % 2 of 
		zero: is_even := true;
		1: is_even := false;
	end;
	writeln("The input ", num, " is even ? ", is_even);
end
;
begin
	read(stu.is_male);
	read(stu.age);
	read(stu.name);
	writeln("The input ", stu.age, " is even ? ", is_even);
end
.
