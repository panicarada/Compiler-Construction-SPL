program is_even;	// 判断是否为偶数
const
	zero = 0;
var	
	input : integer;

function is_even(
var
	num : integer
) : boolean;
begin
	writeln("abs(", num, ") = ", abs(num));
	num := abs(num);
	case num % 2 of 
		zero: is_even := true;
		1: is_even := false;
	end;
end
;
begin
	read("Please enter your input: ", input);
	if is_even(input) then begin
		writeln("The input ", input, " is even.");
	end
	else begin		
		writeln("The input ", input, " is not even.");
	end;
end
.
